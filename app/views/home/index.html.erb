<h1>Dashboard</h1>

<div class="row">
  <div class="col-lg-4">
    <div class="p-40 gradient-green text-white shadow2 r-5">
      <div class="float-right">
        <i class="fa fa-venus-mars fa-5x"></i>
      </div>
      <div class="s-36 font-weight-bold"><%= number_with_delimiter(@dashboard.total_names) -%></div>
      <h6 class="counter-title">Total Names</h6>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="p-40 gradient-pink text-white shadow2 r-5">
      <div class="float-right">
        <i class="fa fa-female fa-5x"></i>
      </div>
      <div class="s-36 font-weight-bold"><%= number_with_delimiter(@dashboard.total_female_names) -%></div>
      <h6 class="counter-title">Total Female Names</h6>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="p-40 gradient text-white shadow2 r-5">
      <div class="float-right">
        <i class="fa fa-male fa-5x"></i>
      </div>
      <div class="s-36 font-weight-bold"><%= number_with_delimiter(@dashboard.total_male_names) -%></div>
      <h6 class="counter-title">Total Male Names</h6>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-lg-6">
    <h2><%= @dashboard.latest_year %> Top 10 Female Baby Names</h2>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th># of Babies</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'name', collection: @dashboard.top_ten_female_names_latest_year %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-6">
    <h2><%= @dashboard.latest_year %> Top 10 Male Baby Names</h2>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th># of Babies</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'name', collection: @dashboard.top_ten_male_names_latest_year %>
      </tbody>
    </table>
  </div>
</div>